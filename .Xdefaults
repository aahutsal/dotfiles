!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi: 196

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! -------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
! -----------------------------------------------------------------------------


URxvt.geometry:		    			90x30
URxvt.tintColor:	    			#7777C0
URxvt.fading:               90
URxvt.urgentOnBell:         true
URxvt.visualBell:           true
URxvt.loginShell:           true

URxvt.lineSpace:            0
URxvt.internalBorder:       2

URxvt.font:                 xft:DejaVu Sans Mono:pixelsize=10
URxvt.boldFont:             xft:DejaVu Sans Mono for Powerline:pixelsize=10:Bold
URxvt.italicFont:           xft:DejaVu Sans Mono for Powerline:pixelsize=10:Italic
URxvt.boldItalicFont:   		xft:DejaVu Sans Mono for Powerline:pixelsize=10:Bold:Italic

! Add to your .Xdefaults (or .Xresources) the following lines:
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False

!! Change font size on Control-Plus/Minus
URxvt.keysym.C-Up:			font-size:increase
URxvt.keysym.C-Down:		font-size:decrease
URxvt.keysym.C-S-Up:		font-size:incglobal
URxvt.keysym.C-S-Down:	font-size:decglobal
URxvt.keysym.C-equal:		font-size:reset
URxvt.keysym.C-S-slash: font-size:show


! Fonts
URxvt.allow_bold:           true

! Fix font space
URxvt.letterSpace: -1
! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! Perl extensions
URxvt.url-launcher:         /usr/bin/xdg-open

! Large history limit
URxvt.saveLines: 10000
URxvt.scrollBar: false
URxvt.foreground: #f9f7f1
URxvt.depth: 32
URxvt.secondaryScroll: true
URxvt.font: xft:DejaVu Sans Mono:pixelsize=12:antialias=true
URxvt.perl-ext-common: default,matcher,tabbed,selection-to-clipboard
URxvt.matcher.button: 1
URxvt.tabbed.saveLines: 2000
URxvt.tabbed.scrollBar: false
URxvt.tabbed.secondaryScroll: true
URxvt.tabbed.font: xft:DejaVu Sans Mono:pixelsize=22:antialias=true
URxvt.intensityStyles: false

URxvt.background: [80]#000000
URxvt.inheritPixmap: true
URxvt.transparent: true
URxvt.shading: 90

URxvt.keysym.C-Delete: perl:matcher:last
URxvt.keysym.M-Delete: perl:matcher:list
URxvt.matcher.rend.0: Uline Bold fg5
URxvt.colorUL: #4682B4